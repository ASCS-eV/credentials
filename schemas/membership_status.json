{
    "$id": "https://example.com/schemas/membership.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "MembershipStatus",
    "description": "asc(s e.V. membership status using JsonSchema",
    "type": "object",
    "properties": {
      "credentialSubject": {
        "type": "object",
        "properties": {
          "ascsMembershipStatus": {
            "type": "object",
            "properties": {
              "ascs": {
                "type": "boolean"
              },
              "envited": {
                "type": "boolean"
              }
            },
            "required": [
              "ascs",
              "envited"
            ]
          },
          "ascsMember": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "address": {
                "type": "string"
              },
              "vatNumber": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "address",
              "vatNumber"
            ]
          }
        },
        "required": [
          "id",
          "name",
          "purpose",
          "ascsMembershipStatus",
          "ascsMember"
        ]
        },
        "required": [
          "emailAddress"
        ]
      }
    }
  }